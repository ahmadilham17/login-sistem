{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compiler C++",
            "type": "shell",
            "command": "g++",
            "args": [
                ".\\src\\*.cpp",
                "-o",
                ".\\bin\\main.exe"
            ]
        },
        {
            "label": "Run C++",
            "type": "shell",
            "command": ".\\bin\\*.exe",
            "dependsOn": ["Compiler C++"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}